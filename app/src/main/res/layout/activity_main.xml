<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:columnCount="7"
    android:rowCount="2">

    <Space
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton"
        android:layout_gravity="fill"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/cymbal1"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:onClick="cymbal" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton2"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:onClick="tom1"
        android:src="@drawable/tom1"
        android:layout_gravity="fill"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/tom2"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:onClick="tom2"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/cymabl2"
        android:scaleType="fitCenter"
        android:onClick="symbal2"
        android:background="#00000000"
        android:layout_gravity="fill"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton5"
        android:scaleType="fitCenter"
        android:src="@drawable/hihat"
        android:background="#00000000"
        android:onClick="hihat"
        android:layout_gravity="fill"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton6"
        android:src="@drawable/snare"
        android:scaleType="fitCenter"
        android:onClick="snare"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true"
        android:layout_column="1"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton7"
        android:src="@drawable/bass"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_gravity="fill"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true"
        android:layout_columnSpan="2"
        android:onClick="bass" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton8"
        android:src="@drawable/tom3"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_gravity="fill"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true"
        android:onClick="tom3" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton9"
        android:background="#00000000"
        android:src="@drawable/cymabl3"
        android:scaleType="fitCenter"
        android:layout_gravity="fill"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:adjustViewBounds="true"
        android:onClick="cymbal3" />

</GridLayout>
